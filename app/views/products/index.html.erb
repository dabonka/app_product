<h1>Listing products</h1>
 
<table>
  <tr>
    <th><%= sortable "id", "ID" %></th>
    <th><%= sortable "name", "Product Name" %></th>
    <th><%= sortable "categories.name", "Category Name" %></th>
    <th><%=  sortable "price", "Price" %></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.category.name %></td>
      <td><%= product.price %></td>
    </tr>
  <% end %>

   	<%= paginate @products %>

</table>